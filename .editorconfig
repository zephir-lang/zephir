# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root                     = true

[*]
end_of_line              = lf
insert_final_newline     = true
indent_style             = space
charset                  = utf-8
indent_size              = 4
trim_trailing_whitespace = true

[{Makefile}]
indent_style             = tab
tab_width                = 4

[*.{bat,sh,psm1,mk,c,h,awk,w32,frag,zep,lemon,re}]
indent_style             = tab
tab_width                = 4

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size              = 2

[zephir-autocomplete]
indent_size              = 2
